#include<iostream>
#include<deque>

using namespace std;
int main(){
    
    deque<int> d;
    
    d.push_back(1);
    d.push_front(3);
    
    cout<<endl;
        
        cout<<"print the first index "<<d.at(1)<<endl;
        
        cout<<"print the first elememnt"<<d.front()<<endl;
        cout<<"print the last element"<<d.back()<<endl;
        
        cout<<"Empty or not"<<d.empty()<<endl;
        
        //for erase we have to use begin method it will erase element from array
        cout<<"before erase"<<d.size()<<endl;
        d.erase(d.begin(),d.begin()+1);
        cout<<"after erase"<<d.size()<<endl;
        for(int i:d){
        cout<<i<<endl;
        
    }
    
    
}
    
