#include<iostream>
#include<vector>

using namespace std;
int main(){
    vector<int> v;
    cout<<"Cpacity "<<v.capacity()<<endl;
    
    v.push_back(1);
    cout<<"Cpacity "<<v.capacity()<<endl;
    
    v.push_back(2);
    cout<<"Cpacity "<<v.capacity()<<endl;
    
    cout<<"size"<<v.size()<<endl;
    
    cout<<"Element of the 2nd index "<<v.at(1)<<endl;
    
    cout<<"Front element"<<v.front()<<endl;
    cout<<"Last element"<<v.back()<<endl;
    
    //if we want to remove any element from the vector we dcan use pop
    cout<<"before pop"<<endl; 
    for(int i:v){
        cout<<i<<" ";
    }cout<<endl;
    
    v.pop_back();
    
    cout<<"After pop"<<endl; 
    for(int i:v){
        cout<<i<<" ";
    }
    // for clearing all the vectors element
    
    v.clear();
    cout<<"enter the element "<<v.size()<<endl;
}
